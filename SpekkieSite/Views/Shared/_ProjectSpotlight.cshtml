<div class="project-spotlight">
    <div class="spotlight-image">
        <img src="@Model.ImageUrl" alt="@Model.Title" />
    </div>
    <div class="spotlight-content">
        <h3 class="spotlight-title">@Model.Title</h3>
        <p class="spotlight-description">@Model.Description</p>
        <a class="spotlight-link" href="@Model.ProjectUrl" target="_blank">View Project</a>
    </div>
</div>